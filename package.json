{
  "name": "momo-memory-plugin",
  "displayName": "Momo Memory Plugin",
  "description": "Window automation helper - capture window info, record coordinates, OCR text recognition",
  "version": "0.0.2",
  "publisher": "momo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "momo.selectWindow",
        "title": "Momo: Select Target Window"
      },
      {
        "command": "momo.captureOCR",
        "title": "Momo: Capture OCR"
      },
      {
        "command": "momo.clickPoint",
        "title": "Momo: Click Point"
      },
      {
        "command": "momo.openSettings",
        "title": "Momo: Open Settings"
      },
      {
        "command": "momo.refreshConfig",
        "title": "Momo: Refresh Config from Backend"
      },
      {
        "command": "momo.showBackendOutput",
        "title": "Momo: Show Backend Output"
      },
      {
        "command": "momo.openBackendConfig",
        "title": "Momo: Open Backend Config Window"
      }
    ],
    "keybindings": [
      {
        "command": "momo.selectWindow",
        "key": "ctrl+alt+w",
        "when": "!editorFocus"
      },
      {
        "command": "momo.captureOCR",
        "key": "ctrl+alt+o",
        "when": "!editorFocus"
      }
    ],
    "configuration": {
      "title": "Momo Memory Plugin",
      "properties": {
        "momo.targetWindow": {
          "type": "object",
          "default": {
            "title": "",
            "processName": "",
            "hwnd": 0
          },
          "description": "Target window configuration",
          "properties": {
            "title": {
              "type": "string",
              "description": "Window title to match"
            },
            "processName": {
              "type": "string",
              "description": "Process name to match"
            },
            "hwnd": {
              "type": "number",
              "description": "Window handle (auto-filled)"
            }
          }
        },
        "momo.useBackend": {
          "type": "boolean",
          "default": true,
          "description": "Use MomoBackend for window operations and OCR. Requires MomoBackend.exe to be running."
        },
        "momo.autoStartBackend": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MomoBackend when the extension activates"
        },
        "momo.backendPort": {
          "type": "number",
          "default": 5678,
          "description": "Port number for MomoBackend HTTP API"
        },
        "momo.statusBarLayout": {
          "type": "string",
          "default": "window,buttons,ocr,refresh",
          "description": "Status bar items order (comma-separated). Available items: window, buttons, ocr, refresh. Example: 'window,ocr,buttons,refresh'"
        },
        "momo.statusBarAlignment": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "left",
          "description": "Status bar alignment (left or right)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "tesseract.js": "^5.0.4",
    "regenerator-runtime": "^0.14.1"
  },
  "optionalDependencies": {
    "robotjs": "^0.6.0"
  }
}
